depend() {
	need dbus acpid 
	after alsasound
}

start() {
	ebegin "Starting eee-control daemon"
	start-stop-daemon --start -q --exec /usr/bin/eee-control-daemon
	eend $?
}

stop() {
	ebegin "Stopping eee-control daemon"
	start-stop-daemon --stop -q --pidfile /var/run/eee-control-daemon.pid
	eend $?
}
