depend() {
	need net
	before apache 
}

start() {
#	if [ -z $PYDOC_PORT ] ; then
#		eerror "Port not set"
#		return 1
#	fi
	ebegin "Starting Spectre  WebGUI  daemon  $PYDOC_PORT" 
	start-stop-daemon --start --background --make-pidfile \
			  --pidfile /var/run/spectre.pid \
			  --startas /usr/sbin/spectre -- --daemon
	eend $?
}

stop() {
	ebegin "Stopping pydoc server"
	start-stop-daemon --stop --quiet --pidfile /var/run/spectre.pid
	eend $?
}
