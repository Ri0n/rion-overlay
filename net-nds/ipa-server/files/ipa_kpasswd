NAME="ipa_kpasswd"
PROG="/usr/sbin/ipa_kpasswd"

depend() {
	use mit-krb5kdc net
	before net

start() {
	ebegin "Starting ipa_kpasswd "
	start-stop-daemon --start  --background --make-pidfile \
			--pidfile /var/run/ipa_kpasswd.pid \
			--startas /usr/sbin/ipa_kpassw
	 eend $?
}	

stop() {
	 ebegin "Stopping ipa_kpasswd "
	start-stop-daemon --stop --quiet --pidfile /var/run/ipa_kpassw
	 eend $?

}	
