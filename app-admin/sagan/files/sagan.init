depend() {
	use logger mysql postgresql 
	need localmount

}

start() {
	/usr/bin/sagan  ${SAGAN_OPTS} --daemon --user ${SAGAN_USER}  --program ${LOGGER}

	eend $?
}

stop() {
	kill -15 `cat /var/run/sagan/sagan.pid`

}
