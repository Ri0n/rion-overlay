depend() {
	need net 
	use mta
	after logger
}

start() {
	ebegin "Starting spmfilter"
	start-stop-daemon --start --quiet --exec /usr/sbin/spmfilter
	eend $?
}

stop() {
	ebegin "Stopping spmfilter"
	start-stop-daemon --stop --quiet --exec usr/sbin/spmfilter
	eend $?

}
